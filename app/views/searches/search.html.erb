<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
    <h2>User search for <span>"<%= params[:word] %>"</span></h2>
    <%= render "users/list", users: @users %>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <h2>PostImages search for <span>"<%= params[:word] %>"</span></h2>
    <%= render "post_images/list", post_images: @post_images %>
  <% end %>
</table>