<div class="row">
  <div class="card-list-container mx-auto">
    <% post_images.each do |post_image| %>
      <div class="card  mx-auto mt-2 mb-2 shadow-lg">
        <%= link_to post_image_path(post_image.id) do %>
          <%= image_tag post_image.get_image(400,300), class:"card-img-top"; %>
        <% end %>
        <div class="card-body">
          <div class="">
            <%= image_tag post_image.user.get_profile_image(80,80), class:"mt-3 rounded-circle"; %>
          </div>
          <div class="">
            <p class="card-title">
              <%= link_to(post_image_path(post_image.id), class:"text-dark") do %>
                <strong><i class="far fa-flag"></i><span> <%= post_image.shop_name %></span></strong>
              <% end %>
            </p>
            <p class="card-text">説明：<%= post_image.caption %></p>
            <span><i class="fas fa-user"></i> By <%= post_image.user.name %> ｜ </span>
            <span class="favorite-btn_<%= post_image.id %>"><%= render "favorites/favorite-btn", post_image: post_image %></span>
            <span><%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id), class:"text-dark" %></span>
          </div>
        </div>
      </div>
    <% end %>
    <%= paginate post_images %>
  </div>
</div>